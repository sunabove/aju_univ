        android:ems="10"
        android:text="4" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="119dp"
        android:layout_y="130dp"
        android:text="+" />

    <TextView
        android:id="@+id/myResult"
